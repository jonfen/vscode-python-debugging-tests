    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: app.py",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--without-threads",
                "--lazy-loader",
            ],
            "justMyCode": false
        },
        {
            "name": "Python: app.py",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}